@model ShenMen.Dominio.Cliente

@{
    ViewBag.Title = "Detalhes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Dados do Cliente</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 formContent">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Informações

                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-8">
                            <form role="form">
                                <div class="form-group">
                                    <label>Nome do Cliente: </label>
                                    @Html.DisplayFor(model => model.NOME)
                                </div>
                                <div class="form-group">
                                    <label>Endereço do Cliente: </label>
                                    @Html.DisplayFor(model => model.ENDERECO)
                                </div>
                                <div class="form-group">
                                    <label>Email do Cliente: </label>
                                    @Html.DisplayFor(model => model.EMAIL)
                                </div>
                                <div class="form-group">
                                    <label>Telefone do Cliente: </label>
                                    @Html.DisplayFor(model => model.TELEFONE)
                                </div>
                                <div class="form-group">
                                    <label>Data Nascimento do Cliente: </label>
                                    @Html.DisplayFor(model => model.DTNASC)
                                </div>
                                <div>
                                    @Html.ActionLink("Editar", "Editar", new { id = Model.ID_CLIENTE }, new { @class = "btn btn-success" })
                                    <a href="/Cliente/Index" class="btn btn-danger">Voltar</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
