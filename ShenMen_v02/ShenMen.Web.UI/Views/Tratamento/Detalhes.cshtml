@model ShenMen.Dominio.Profissional_TratamentoViewModel

@{
    ViewBag.Title = "Detalhes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Dados do Tratamento</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 formContent">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Informações

                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-8">
                            <div class="form-group">
                                <label>Nome do Profissional</label>
                                @Html.DisplayFor(model => model.PROFISSIONAL.NOME)
                            </div>
                            <div class="form-group">
                                <label>Descrição do Tratamento</label>
                                @Html.DisplayFor(model => model.DESCRICAO)
                            </div>
                            <div>
                                @Html.ActionLink("Editar", "Editar", new { id = Model.ID_TRATAMENTO }, new { @class = "btn btn-success" })
                                <a href="/Tratamento/Index" class="btn btn-danger">Voltar</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
