@model ShenMen.Dominio.Profissional

@{
    ViewBag.Title = "Cadastrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Cadastrar Profissional</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 formContent">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Informações
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-8">
                            <form role="form">
                                <div class="form-group">
                                    <label>Nome do Profissional</label>
                                    @Html.TextBoxFor(model => model.NOME, new { @class = "form-control", @placeholder = "Nome do Profissional" })
                                    @Html.ValidationMessageFor(model => model.NOME)
                                </div>
                                <div class="form-group">
                                    <label>Email do Profissional</label>
                                    @Html.TextBoxFor(model => model.EMAIL, new { @class = "form-control", @placeholder = "Email do Profissional" })
                                    @Html.ValidationMessageFor(model => model.EMAIL)
                                </div>
                                <div class="form-group">
                                    <label>Telefone do Profissional</label>
                                    @Html.TextBoxFor(model => model.TELEFONE, new { @class = "form-control numberForm", @placeholder = "Telefone" })
                                    @Html.ValidationMessageFor(model => model.TELEFONE)
                                </div>
                                <div class="form-group">
                                    <label>Senha do Profissional</label>
                                    @Html.TextBoxFor(model => model.SENHA, new { @class = "form-control numberForm", @placeholder = "Senha" })
                                    @Html.ValidationMessageFor(model => model.SENHA)
                                </div>
                                <div>
                                    <input type="submit" value="Cadastrar" class="btn btn-success" />
                                    <a href="/Profissional/Index" class="btn btn-danger">Voltar</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
