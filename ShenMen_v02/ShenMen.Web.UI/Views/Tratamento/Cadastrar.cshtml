@model ShenMen.Dominio.Profissional_TratamentoViewModel

@{
    ViewBag.Title = "Cadastrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Cadastrar Tratamento</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 formContent">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Informações
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-8">
                            <form role="form">
                                <div class="form-group">
                                    <label>Descrição do Tratamento</label>
                                    @Html.TextBoxFor(model => model.DESCRICAO, new { @class = "form-control", @placeholder = "Descrição do Tratamento" })
                                    @Html.ValidationMessageFor(model => model.DESCRICAO)
                                </div>
                                <div class="form-group">
                                    <label>Nome do Profissional</label>
                                    @Html.DropDownListFor(model => model.PROFISSIONAL.ID_PROFISSIONAL, (SelectList)ViewBag.ListaProfissionais, "-- Selecione --", new { @class = "form-control" })
                                </div>
                                <div>
                                    <input type="submit" value="Cadastrar" class="btn btn-success" />
                                    <a href="/Tratamento/Index" class="btn btn-danger">Voltar</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
