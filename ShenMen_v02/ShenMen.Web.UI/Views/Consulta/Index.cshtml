@model ShenMen.Dominio.Consulta

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Consultar Agenda</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 formContent">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Filtro de Busca
                </div>
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped">
                            <tr>
                                <th>
                                    <label>Data</label>
                                    @Html.TextBoxFor(model => model.DATA_CONSULTA, new { @class = "form-control numberForm", @id = "datepicker" })
                                </th>
                                <th>
                                    <label>Profissional</label>
                                    <label>Nome do Profissional</label>
                                    @Html.DropDownListFor(model => model.PROFISSIONAL.NOME, (SelectList)ViewBag.ListaProfissionais, "-- Selecione --", new { @class = "form-control" })
                                </th>
                                <th>
                                    <div style="margin: 14% 25%;">
                                        <input type="submit" value="Pesquisar" class="btn btn-success" />
                                    </div>
                                </th>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

}

<script type="text/javascript">
    $('#datepicker').datepicker({
        format: "dd/mm/yyyy",
        language: "pt-BR"
    });
</script>
